@model IEnumerable<CityWeather>;
@{
    string GetBackgroundColor(int? Fahrenheit)
    {
        if (Fahrenheit < 44)
            return "blueBackground";

        else if (Fahrenheit >= 44 && Fahrenheit <= 74)
            return "greenBackground";

        else
            return "orangeBackground";
    }
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
    <link href="~/StyleSheet.css" rel="stylesheet">
</head>
<body>
    <div class="page-content">
        <div class="weatherContainer">
            @foreach(CityWeather city in Model)
            {
                <div class="weatherItem @GetBackgroundColor(city.TemperatureFahrenheit)">
                    <div class="weatherCity">
                        <p class="weatherCityName">@city.CityName</p>
                        <p class="weatherTime">@city.DateAndTime.ToString("hh:mm tt", CultureInfo.InvariantCulture)</p>
                        <a href="../weather/@city.CityUniqueCode">Details</a>
                    </div>
                    <div class="weatherDivider"></div>
                    <div class="weatherTemp">@city.TemperatureFahrenheit &deg;F</div>
                </div>
            }
        </div>
    </div>
</body>
</html>
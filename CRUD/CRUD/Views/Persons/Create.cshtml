@{
    ViewBag.Title = "Create Person";
}

<a href="~/persons/index" class="link-hover">Back To Persons List</a>
<h2>Create Person</h2>

<div class="w-50 flex">
    <form action="~/persons/create" method="post">
        <div class="form-field flex">
            <div class="w-25">
                <label for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input id="PersonName" type="text" name="PersonName" class="form-input"/>
            </div>

            <div class="w-25">
                <label for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input id="Email" type="text" name="Email" class="form-input" />
            </div>

            <div class="w-25">
                <label for="DateOfBirth" class="form-label pt">Date Of Birth</label>
            </div>
            <div class="flex-1">
                <input id="DateOfBirth" type="date" name="DateOfBirth" class="form-input" />
            </div>

            <div class="w-25">
                <label class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                <input value="Male" id="Male" type="radio" name="Gender" class="form-input" />
                <label for="Male" >Male</label>
                <input value="Female" id="Female" type="radio" name="Gender" class="form-input" />
                <label for="Female">Female</label>
                <input value="Other" id="Other" type="radio" name="Gender" class="form-input" />
                <label for="Other">Other</label>
            </div>

            <div class="w-25">
                <label for="Country" class="form-label pt">Country</label>
            </div>
            <div class="flex-1">
                <select id="Country" type="text" name="CountryId" class="form-input" >
                    <option selected disabled value="Empty">Select Country</option>
                    @foreach(CountryResponse country in ViewBag.Countries)
                    {
                        <option value="@country.CountryID">@country.CountryName</option>
                    }
                </select>
            </div>

            <div class="w-25">
                <label for="Address" class="form-label pt">Address</label>
            </div>
            <div class="flex-1">
                <input id="Address" type="text" name="Address" class="form-input" />
            </div>

            <div class="w-25">
                <label for="ReceiveNewsLetters" class="form-label pt">Receive News Letters</label>
            </div>
            <div class="flex-1">
                <input value="true" id="ReceiveNewsLetters" type="checkbox" name="ReceiveNewsLetters" class="form-input" />
            </div>

        </div>
        <button class="button button-green-back">Create</button>

        @if (ViewBag.Erros != null)
        {
            <div class="text-red">
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li class="ml">@error</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>